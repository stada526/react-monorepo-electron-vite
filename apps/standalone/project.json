{
    "name": "standalone",
    "sourceRoot": "apps/standalone/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npx electron-vite build  --config apps/standalone/electron.vite.config.ts"
            }
        },
        "build:mac": {
            "executor": "nx:run-commands",
            "options": {
                "command": "nx build standalone && npx electron-builder --mac --projectDir apps/standalone"
            }
        },
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npx electron-vite dev --config apps/standalone/electron.vite.config.ts --entry out/main/index.js"
            }
        }
    }
}